extends layout 

block content 
  h1= title 
  p ID: #{item._id}
  p Name: #{item.name}
  p Description: #{item.description}
  p Category: 
    a(href=item.category.url)  #{item.category.name}
  p In Stock: #{item.numberInStock}
  p Price: #{item.formattedPrice}
  p Supplier: #{item.supplier}
  p Last Modified: #{item.dateModified_formatted}
  p Date Added: #{item.dateAdded_formatted}

  if toDelete 
    p Do you wish to permanently delete this item?

    div 
      form(method="POST") 
        input(type="hidden" name='itemid' value=item._id)
        button(type="submit") Delete 
      a(href=item.url) Cancel
  else 

    p
      a(href=item.url+'/update') Update 
    p
      a(href=item.url+'/delete') Delete 