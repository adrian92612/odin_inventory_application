extends layout 

block content 
  h1 Details 
  p ID: #{item._id}
  p Name: #{item.name}
  p Description: #{item.description}
  p Category: 
    a(href=item.category.url)  #{item.category.name}
  p In Stock: #{item.numberInStock}
  p Price: #{item.formattedPrice}

  p
    a(href=item.url+'/update') Update 
  p
    a(href=item.url+'/delete') Delete 